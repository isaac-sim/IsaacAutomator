# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = false
insert_final_newline = true

[Dockerfile]
indent_size = 4

[*.json]
indent_size = 4

[*.py]
indent_size = 4

# fedor's ngingx config
[nginx.ingress.router.conf]
indent_size = 8
