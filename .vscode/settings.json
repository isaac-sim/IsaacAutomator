{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "**/.terraform*": true,
        "*.swp": true,
        ".mypy_cache": true,
        "**/__pycache__": true,
        "**/.pytest_cache": true
    },
    "editor.formatOnSave": true,
    "explorerExclude.backup": {},
    "flake8.args": [
        "--max-line-length=120"
    ],
    "markdown.extension.toc.levels": "2..4",
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "editor.formatOnSaveMode": "file"
}
